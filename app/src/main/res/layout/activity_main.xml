<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_stock_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Stock Symbol"/>

    <Button
        android:id="@+id/btn_get_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Stock Data"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stock_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock Data will appear here"
            android:padding="8dp"/>
    </ScrollView>

    <!-- Layout fÃ¼r Tradesimulation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_trade_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Quantity"/>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"/>

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"/>
    </LinearLayout>
</LinearLayout>
